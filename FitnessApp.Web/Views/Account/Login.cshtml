@model FitnessApp.Web.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card border-0 shadow-lg rounded-4 bg-dark text-white overflow-hidden" style="min-height: 500px;">
                <div class="card-header bg-transparent border-0 text-center pt-5 pb-2">
                    <div class="icon-box bg-warning text-dark mx-auto mb-3 rounded-circle d-flex align-items-center justify-content-center shadow" style="width: 70px; height: 70px;">
                        <i class="bi bi-person-lock fs-2"></i>
                    </div>
                    <h2 class="fw-bold text-uppercase" style="font-family: 'Teko', sans-serif; letter-spacing: 2px;">Giriş Yap</h2>
                    <p class="text-secondary small">Hesabınıza erişmek için bilgilerinizi girin</p>
                </div>

                <div class="card-body px-4 px-md-5">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-secondary small text-uppercase fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control bg-dark text-white border-secondary" placeholder="ornek@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-secondary small text-uppercase fw-bold">Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="bi bi-key"></i></span>
                                <input asp-for="Password" class="form-control bg-dark text-white border-secondary" placeholder="******" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4 form-check">
                            <input class="form-check-input bg-dark border-secondary" asp-for="RememberMe" />
                            <label class="form-check-label text-secondary" asp-for="RememberMe">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold text-dark rounded-pill hover-scale">GİRİŞ YAP</button>
                        </div>
                    </form>
                </div>
                
                <div class="card-footer bg-transparent border-top border-secondary text-center py-4">
                    <p class="mb-0 text-secondary">Hesabın yok mu? <a asp-action="Register" class="text-warning text-decoration-none fw-bold">Hemen Kayıt Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}