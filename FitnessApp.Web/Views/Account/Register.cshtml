@model FitnessApp.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 bg-dark text-white">
                <div class="card-header bg-transparent border-0 text-center pt-5 pb-2">
                    <div class="icon-box bg-secondary text-warning mx-auto mb-3 rounded-circle d-flex align-items-center justify-content-center shadow" style="width: 70px; height: 70px;">
                        <i class="bi bi-person-plus-fill fs-2"></i>
                    </div>
                    <h2 class="fw-bold text-uppercase" style="font-family: 'Teko', sans-serif; letter-spacing: 2px;">Aramıza Katıl</h2>
                    <p class="text-secondary small">Spor yolculuğuna başlamak için form doldur</p>
                </div>

                <div class="card-body px-4 px-md-5">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label text-secondary small text-uppercase fw-bold">Ad Soyad</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="bi bi-person"></i></span>
                                <input asp-for="FullName" class="form-control bg-dark text-white border-secondary" placeholder="Adınız Soyadınız" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-secondary small text-uppercase fw-bold">Email Adresi</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control bg-dark text-white border-secondary" placeholder="ornek@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="row g-2">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label text-secondary small text-uppercase fw-bold">Şifre</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary border-secondary text-white"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" class="form-control bg-dark text-white border-secondary" placeholder="******" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label text-secondary small text-uppercase fw-bold">Şifre Tekrar</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary border-secondary text-white"><i class="bi bi-check2-square"></i></span>
                                    <input asp-for="ConfirmPassword" class="form-control bg-dark text-white border-secondary" placeholder="******" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold text-dark rounded-pill hover-scale">KAYIT OL</button>
                        </div>
                    </form>
                </div>
                
                <div class="card-footer bg-transparent border-top border-secondary text-center py-4">
                    <p class="mb-0 text-secondary">Zaten hesabın var mı? <a asp-action="Login" class="text-warning text-decoration-none fw-bold">Giriş Yap</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}