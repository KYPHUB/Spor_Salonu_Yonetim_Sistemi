@model FitnessApp.Web.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Randevu Al";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Randevu Oluştur</h3>
                </div>
                <div class="card-body">
                    
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <input type="hidden" asp-for="TrainerId" />
                        <input type="hidden" asp-for="TrainerName" />
                        <input type="hidden" asp-for="ServiceDuration" id="hiddenDuration" />
                        <input type="hidden" asp-for="ServicePrice" id="hiddenPrice" />
                        <input type="hidden" asp-for="ServiceName" id="hiddenName" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Antrenör</label>
                            <input type="text" class="form-control" value="@Model.TrainerName" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ServiceId" class="form-label fw-bold">Hizmet Seçiniz</label>
                            <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceList" id="serviceSelect"></select>
                            
                            <div class="form-text mt-2" id="serviceInfo" style="font-weight: bold; color: #0d6efd;">
                                Süre: @Model.ServiceDuration dk | Ücret: @Model.ServicePrice ₺
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label fw-bold">Tarih Seçiniz</label>
                            <input asp-for="Date" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" id="appointmentDate" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label fw-bold">Saat Seçiniz</label>
                            <select asp-for="StartTime" class="form-select" id="timeSlots" disabled>
                                <option value="">Önce tarih seçiniz</option>
                            </select>
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg" id="btnSubmit" disabled>Randevuyu Onayla</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var trainerId = @Model.TrainerId;
            
            
            var services = @Html.Raw(ViewBag.ServiceDetails);

            
            $('#serviceSelect').change(function() {
                var selectedId = parseInt($(this).val());
                var service = services.find(s => s.Id === selectedId);

                if (service) {
                    
                    $('#serviceInfo').text('Süre: ' + service.DurationMinutes + ' dk | Ücret: ' + service.Price + ' ₺');
                    
                    
                    $('#hiddenDuration').val(service.DurationMinutes);
                    $('#hiddenPrice').val(service.Price);

                    
                    var date = $('#appointmentDate').val();
                    if (date) loadSlots(date, service.DurationMinutes);
                }
            });

           
            $('#appointmentDate').change(function () {
                var selectedDate = $(this).val();
                var currentDuration = $('#hiddenDuration').val(); 
                if (selectedDate) {
                    loadSlots(selectedDate, currentDuration);
                }
            });

            
            var initialDate = $('#appointmentDate').val();
            var initialDuration = $('#hiddenDuration').val();
            if (initialDate) {
                loadSlots(initialDate, initialDuration);
            }

            function loadSlots(date, duration) {
                $('#timeSlots').prop('disabled', true).html('<option>Yükleniyor...</option>');
                
                $.get('/Appointment/GetAvailableSlots', { trainerId: trainerId, date: date, durationMinutes: duration }, function (data) {
                    var options = '<option value="">Saat seçiniz</option>';
                    if (data.length === 0) {
                        options = '<option value="">Uygun saat yok</option>';
                    } else {
                        $.each(data, function (index, value) {
                            options += '<option value="' + value + '">' + value + '</option>';
                        });
                    }
                    $('#timeSlots').html(options).prop('disabled', data.length === 0);
                });
            }

        
            $('#timeSlots').change(function() {
                $('#btnSubmit').prop('disabled', $(this).val() === "");
            });
        });
    </script>
}