<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Center</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Teko:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary box-shadow py-3" style="z-index: 10;">
            <div class="container">
                <a class="navbar-brand fw-bold text-uppercase fs-3 text-warning" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-activity"></i> SAU FITNESS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item"><a class="nav-link text-white mx-2" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="nav-item"><a class="nav-link text-white mx-2" asp-area="" asp-controller="Services" asp-action="Index">Hizmetler</a></li>
                        <li class="nav-item"><a class="nav-link text-white mx-2" asp-area="" asp-controller="Trainers" asp-action="Index">Antrenörler</a></li>

                        @* ADMIN MENÜSÜ *@
                        @if (User.IsInRole("Admin") || (User.Identity?.Name?.Contains("sakarya.edu.tr") == true))
                        {
                            <li class="nav-item dropdown ms-lg-3">
                                <a class="nav-link dropdown-toggle btn btn-outline-danger text-light px-3" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock-fill"></i> Yönetim
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Panel Özeti</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Gym" asp-action="Index">Salonları Yönet</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Service" asp-action="Index">Hizmetleri Yönet</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Trainer" asp-action="Index">Antrenörleri Yönet</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-warning" asp-area="Admin" asp-controller="Appointment" asp-action="Index">Randevu Onayları</a></li>
                                </ul>
                            </li>
                        }

                        @* ÜYE MENÜSÜ *@
                        @if (User.IsInRole("Member"))
                        {
                            <li class="nav-item dropdown ms-lg-3">
                                <a class="nav-link dropdown-toggle btn btn-outline-info text-light px-3" href="#" id="memberDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> Hesabım
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="memberDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Appointment" asp-action="Index">Randevularım</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Trainers" asp-action="Index">Yeni Randevu Al</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-dark mt-auto py-4">
        <div class="container text-center text-secondary">
            &copy; 2025 - SAU Fitness Center - Tüm Hakları Saklıdır
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>