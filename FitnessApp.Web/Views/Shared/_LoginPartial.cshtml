@using Microsoft.AspNetCore.Identity
@using FitnessApp.Web.Data
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav ms-auto align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    @* KULLANICI GİRİŞ YAPMIŞSA *@
    <li class="nav-item">
        <a class="nav-link text-white fw-bold me-2" asp-area="" asp-controller="Home" asp-action="Index" title="Profilim">
            <i class="bi bi-person-check-fill text-success"></i> Merhaba, @User.Identity?.Name
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-sm btn-danger text-white fw-bold">
                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
            </button>
        </form>
    </li>
}
else
{
    @* KULLANICI GİRİŞ YAPMAMIŞSA *@
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus"></i> Kayıt Ol
        </a>
    </li>
    <li class="nav-item ms-2">
        <a class="btn btn-sm btn-warning text-dark fw-bold" asp-area="" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
        </a>
    </li>
}
</ul>