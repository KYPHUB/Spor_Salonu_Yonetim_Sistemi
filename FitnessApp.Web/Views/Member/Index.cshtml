@{
    ViewData["Title"] = "Üye Paneli";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">Hoşgeldiniz, @User.Identity?.Name</h1>
            <p class="lead text-muted">Üyelik panelinizden randevularınızı yönetebilirsiniz.</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Book Appointment Card -->
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-primary">
                <div class="card-body text-center py-5">
                    <div class="mb-3 text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-calendar-plus" viewBox="0 0 16 16">
                            <path d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z"/>
                            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                        </svg>
                    </div>
                    <h3 class="card-title">Yeni Randevu Al</h3>
                    <p class="card-text">Antrenörlerimizden size uygun saatte randevu oluşturun.</p>
                    <a asp-controller="Trainers" asp-action="Index" class="btn btn-primary btn-lg mt-3">Randevu Al</a>
                </div>
            </div>
        </div>

        <!-- My Appointments Card -->
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-success">
                <div class="card-body text-center py-5">
                    <div class="mb-3 text-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16">
                            <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                        </svg>
                    </div>
                    <h3 class="card-title">Randevularım</h3>
                    <p class="card-text">Geçmiş ve gelecek randevularınızı görüntüleyin.</p>
                    <a href="#" class="btn btn-success btn-lg mt-3 disabled">Görüntüle (Yakında)</a>
                </div>
            </div>
        </div>
    </div>
</div>
