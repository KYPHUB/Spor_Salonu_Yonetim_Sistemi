            <div class="card h-100 border-0 shadow-sm hover-effect p-4" style="background-color: var(--card-bg, #fff);">
                <div class="card-body">
                    <div class="icon-box bg-warning text-dark mx-auto mb-4 rounded-circle d-flex align-items-center justify-content-center shadow" style="width: 80px; height: 80px;">
                        <i class="bi bi-calendar-check-fill fs-2"></i>
                    </div>
