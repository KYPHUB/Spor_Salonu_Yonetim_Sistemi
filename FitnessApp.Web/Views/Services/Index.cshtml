@model IEnumerable<FitnessApp.Web.Data.Service>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container py-5">
    <h1 class="text-center mb-5">Hizmetlerimiz</h1>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 bg-light">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="card-title text-primary">@item.Name</h3>
                            <span class="badge bg-success fs-5">@item.Price.ToString("C2")</span>
                        </div>
                        <p class="card-text lead">@item.Description</p>
                        <div class="d-flex align-items-center text-muted">
                            <i class="bi bi-clock me-2"></i>
                            <span>SÃ¼re: @item.DurationMinutes dakika</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
