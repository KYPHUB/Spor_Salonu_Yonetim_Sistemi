@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="text-center">
    <h1 class="display-4">Admin Paneline Hoşgeldiniz</h1>
    <p>Buradan salonları, hizmetleri ve antrenörleri yönetebilirsiniz.</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Salon Yönetimi</h5>
                    <p class="card-text">Spor salonlarını ekleyin, düzenleyin veya silin.</p>
                    <a asp-controller="Gym" asp-action="Index" class="btn btn-primary">Salonlara Git</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Hizmet Yönetimi</h5>
                    <p class="card-text">Sunulan hizmetleri ve fiyatlarını yönetin.</p>
                    <a asp-controller="Service" asp-action="Index" class="btn btn-primary">Hizmetlere Git</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Antrenör Yönetimi</h5>
                    <p class="card-text">Antrenörleri ve uzmanlık alanlarını yönetin.</p>
                    <a asp-controller="Trainer" asp-action="Index" class="btn btn-primary">Antrenörlere Git</a>
                </div>
            </div>
        </div>
    </div>
</div>
