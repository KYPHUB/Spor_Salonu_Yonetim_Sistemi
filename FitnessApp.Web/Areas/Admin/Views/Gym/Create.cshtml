@model FitnessApp.Web.Data.Gym

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white text-center py-4">
                    <h3 class="fw-bold text-uppercase mb-0" style="font-family: 'Teko', sans-serif;">
                        <i class="bi bi-building me-2 text-warning"></i> Yeni Salon Ekle
                    </h3>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-secondary small fw-bold text-uppercase">Salon Adı</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-building text-warning"></i></span>
                                <input asp-for="Name" class="form-control bg-light border-start-0" placeholder="Örn: SAU Fitness Center" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Address" class="form-label text-secondary small fw-bold text-uppercase">Adres</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-geo-alt text-warning"></i></span>
                                <textarea asp-for="Address" class="form-control bg-light border-start-0" rows="2" placeholder="Tam adres..."></textarea>
                            </div>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Phone" class="form-label text-secondary small fw-bold text-uppercase">Telefon</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-telephone text-warning"></i></span>
                                <input asp-for="Phone" class="form-control bg-light border-start-0" placeholder="0555 123 4567" />
                            </div>
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="OpeningHours" class="form-label text-secondary small fw-bold text-uppercase">Çalışma Saatleri</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-clock text-warning"></i></span>
                                <input asp-for="OpeningHours" class="form-control bg-light border-start-0" placeholder="Örn: 08:00 - 22:00" />
                            </div>
                            <span asp-validation-for="OpeningHours" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold text-dark rounded-pill shadow-sm hover-scale">
                                <i class="bi bi-check-circle-fill me-2"></i> KAYDET
                            </button>
                            <a asp-action="Index" class="btn btn-light btn-lg fw-bold text-secondary rounded-pill border hover-scale text-center text-decoration-none">
                                <i class="bi bi-arrow-left me-2"></i> Listeye Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}