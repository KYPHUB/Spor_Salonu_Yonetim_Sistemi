@model IEnumerable<FitnessApp.Web.Data.Gym>

@{
    ViewData["Title"] = "Salon Yönetimi";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-uppercase mb-0" style="font-family: 'Teko', sans-serif; letter-spacing: 1px;">
                <i class="bi bi-building me-2 text-warning"></i> Salon Listesi
            </h2>
            <p class="text-muted small mb-0">Sistemdeki spor salonlarını buradan yönetebilirsiniz.</p>
        </div>
        <a asp-action="Create" class="btn btn-warning fw-bold shadow-sm rounded-pill px-4 hover-scale">
            <i class="bi bi-plus-lg"></i> Yeni Salon Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr class="text-uppercase small fw-bold">
                            <th class="ps-4">Salon Adı</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                            <th>Çalışma Saatleri</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.Name)</span>
                                </td>
                                <td class="text-muted">
                                    <i class="bi bi-geo-alt-fill text-warning me-1"></i> @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-telephone-fill me-1 text-secondary"></i> @Html.DisplayFor(modelItem => item.Phone)
                                    </span>
                                </td>
                                <td>
                                    <small class="text-secondary fw-bold"><i class="bi bi-clock me-1 text-warning"></i> @Html.DisplayFor(modelItem => item.OpeningHours)</small>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-circle shadow-sm" title="Düzenle">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-circle ms-1 shadow-sm" title="Sil">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="icon-box bg-light text-secondary mx-auto mb-3 rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                        <i class="bi bi-inbox fs-4"></i>
                    </div>
                    <p class="text-muted">Henüz kayıtlı bir salon yok.</p>
                </div>
            }
        </div>
    </div>
</div>