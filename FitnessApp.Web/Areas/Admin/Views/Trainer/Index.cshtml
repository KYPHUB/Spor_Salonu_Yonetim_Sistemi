@model IEnumerable<FitnessApp.Web.Data.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<h1>Antrenörler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Antrenör Ekle</a>
</p>
<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Fotoğraf</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>Uzmanlık Alanları</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.PhotoUrl))
                {
                    <img src="@item.PhotoUrl" alt="@item.FullName" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
                }
                else
                {
                    <span class="text-muted">Fotoğraf Yok</span>
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
            <td>
                @foreach (var service in item.Specialties)
                {
                    <span class="badge bg-info text-dark">@service.Name</span>
                }
            </td>
            <td>
                <a asp-controller="TrainerAvailability" asp-action="Index" asp-route-trainerId="@item.Id" class="btn btn-sm btn-info text-white">Çalışma Saatleri</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
