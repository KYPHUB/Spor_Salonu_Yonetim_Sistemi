@model FitnessApp.Web.Data.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
    var services = ViewBag.Services as List<FitnessApp.Web.Data.Service>;
}

<h1>Yeni Antrenör Ekle</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Ad Soyad</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Bio" class="form-label">Biyografi</label>
                <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label class="form-label">Fotoğraf</label>
                <input type="file" name="photoFile" class="form-control" accept="image/*" />
            </div>
            
            <div class="mb-3">
                <label class="form-label">Uzmanlık Alanları</label>
                <div class="card p-2">
                    @if (services != null)
                    {
                        foreach (var service in services)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="selectedServices" value="@service.Id" id="service_@service.Id">
                                <label class="form-check-label" for="service_@service.Id">
                                    @service.Name
                                </label>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="mb-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
