@model FitnessApp.Web.Data.Trainer

@{
    ViewData["Title"] = "Antrenör Sil";
}

<div class="container py-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Antrenör Sil</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Dikkat!</strong> Bu işlem geri alınamaz. Antrenörün tüm randevuları da silinecektir.
            </div>
            
            <dl class="row mb-4">
                <dt class="col-sm-3">Ad Soyad:</dt>
                <dd class="col-sm-9"><strong>@Model.FullName</strong></dd>
                
                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                {
                    <dt class="col-sm-3">Fotoğraf:</dt>
                    <dd class="col-sm-9">
                        <img src="@Model.PhotoUrl" alt="@Model.FullName" class="rounded" style="width: 80px; height: 80px; object-fit: cover;" />
                    </dd>
                }
            </dl>
            
            <form asp-action="Delete" id="deleteForm" onsubmit="return confirmDelete();">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Kalıcı Olarak Sil
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Vazgeç
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm('Bu antrenörü kalıcı olarak silmek istediğinize emin misiniz?\n\nBu işlem geri alınamaz!')) {
                showLoading();
                return true;
            }
            return false;
        }
    </script>
}
