@model FitnessApp.Web.Data.Trainer

@{
    ViewData["Title"] = "Antrenör Sil";
}

<h1>Antrenör Sil</h1>

<h3>Bu antrenörü silmek istediğinize emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            Fotoğraf
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
            {
                <img src="@Model.PhotoUrl" alt="@Model.FullName" style="width: 100px;" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div>
