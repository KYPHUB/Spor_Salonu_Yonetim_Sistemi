@model FitnessApp.Web.Data.Service

@{
    ViewData["Title"] = "Hizmet Sil";
}

<div class="container py-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Hizmet Sil</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Dikkat!</strong> Bu işlem geri alınamaz.
            </div>
            
            <dl class="row mb-4">
                <dt class="col-sm-3">Hizmet Adı:</dt>
                <dd class="col-sm-9"><strong>@Model.Name</strong></dd>
                
                <dt class="col-sm-3">Süre:</dt>
                <dd class="col-sm-9">@Model.DurationMinutes dakika</dd>
                
                <dt class="col-sm-3">Fiyat:</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</dd>
            </dl>
            
            <form asp-action="Delete" id="deleteForm" onsubmit="return confirmDelete();">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Kalıcı Olarak Sil
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Vazgeç
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm('Bu hizmeti kalıcı olarak silmek istediğinize emin misiniz?\n\nBu işlem geri alınamaz!')) {
                showLoading();
                return true;
            }
            return false;
        }
    </script>
}
