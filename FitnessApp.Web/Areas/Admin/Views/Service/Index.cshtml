@model IEnumerable<FitnessApp.Web.Data.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-uppercase mb-0" style="font-family: 'Teko', sans-serif; letter-spacing: 1px;">
                <i class="bi bi-activity me-2 text-warning"></i> Hizmet Listesi
            </h2>
            <p class="text-muted small mb-0">Spor salonunda sunulan hizmetleri ve fiyatları yönetin.</p>
        </div>
        <a asp-action="Create" class="btn btn-warning fw-bold shadow-sm rounded-pill px-4 hover-scale">
            <i class="bi bi-plus-lg"></i> Yeni Hizmet Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr class="text-uppercase small fw-bold">
                            <th class="ps-4">Hizmet Adı</th>
                            <th>Süre</th>
                            <th>Ücret</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold text-dark fs-6">@Html.DisplayFor(modelItem => item.Name)</span>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-stopwatch me-1 text-primary"></i> @Html.DisplayFor(modelItem => item.DurationMinutes) dk
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success px-3">
                                        @Html.DisplayFor(modelItem => item.Price) ₺
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-circle shadow-sm" title="Düzenle">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-circle ms-1 shadow-sm" title="Sil">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="icon-box bg-light text-secondary mx-auto mb-3 rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                        <i class="bi bi-card-list fs-4"></i>
                    </div>
                    <p class="text-muted">Henüz kayıtlı bir hizmet yok.</p>
                </div>
            }
        </div>
    </div>
</div>