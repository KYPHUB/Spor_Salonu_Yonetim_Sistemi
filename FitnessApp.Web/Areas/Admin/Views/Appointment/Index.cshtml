@model IEnumerable<FitnessApp.Web.Data.Appointment>

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<h1>Randevu Yönetimi</h1>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Üye</th>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</td>
            <td>
                @if(item.Member != null)
                {
                    @item.Member.FullName <br />
                    <small class="text-muted">@item.Member.Email</small>
                }
                else
                {
                    <span class="text-danger">Silinmiş Üye</span>
                }
            </td>
            <td>@item.Trainer?.FullName</td>
            <td>@item.Service?.Name</td>
            <td>
                @switch (item.Status)
                {
                    case FitnessApp.Web.Data.AppointmentStatus.Pending:
                        <span class="badge bg-warning text-dark">Bekliyor</span>
                        break;
                    case FitnessApp.Web.Data.AppointmentStatus.Confirmed:
                        <span class="badge bg-success">Onaylandı</span>
                        break;
                    case FitnessApp.Web.Data.AppointmentStatus.Rejected:
                        <span class="badge bg-danger">Reddedildi</span>
                        break;
                    case FitnessApp.Web.Data.AppointmentStatus.Cancelled:
                        <span class="badge bg-secondary">İptal Edildi</span>
                        break;
                    case FitnessApp.Web.Data.AppointmentStatus.Completed:
                        <span class="badge bg-primary">Tamamlandı</span>
                        break;
                }
            </td>
            <td>
                @if (item.Status == FitnessApp.Web.Data.AppointmentStatus.Pending)
                {
                    <div class="btn-group" role="group">
                        <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success">Onayla</button>
                        </form>
                        <form asp-action="Reject" asp-route-id="@item.Id" method="post" class="d-inline ms-1">
                            <button type="submit" class="btn btn-sm btn-danger">Reddet</button>
                        </form>
                    </div>
                }
            </td>
        </tr>
}
    </tbody>
</table>
